//////////////////////////////////////////////////////////////////////////////////////////parameters///////////////////////////////////////////////////////////////////////////////////

$fn=150;


////////////////////////////////////////////////////////////////////////////////////////////renders////////////////////////////////////////////////////////////////////////////////////

module mug(){
	cup(height=160,diameter=120);
	translate([120/2-5,10,80])
		rotate([90,0,0])
			handle();
}

mug();

/////////////////////////////////////////////////////////////////////////////////////////////modules///////////////////////////////////////////////////////////////////////////////////

module handle(){
	translate([10,0,0]){
		difference(){
			scale([1,1.5,1])
				cylinder(20,50,50);
			translate([-5,0,-5])
				scale([1,1.5,1])
					cylinder(30,45,45);
			translate([-70,-80,-5])
				cube([60,160,30]);
		}
	}
}

module cup(height,diameter){
	difference(){
		cylinder(height,diameter/2,diameter/2);
		translate([0,0,5])
			cylinder(height,diameter/2-5,diameter/2-5);
	}
}