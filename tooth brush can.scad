//////////////////////////////////////////////////////////////////////////////////modules//////////////////////////////////////////////////////////////////////

module can_base(){
	rotate_extrude(){
		square([50,10]);
		translate([45,95,0])
			circle(5);
	}
}

module spiral(){
	for(r=[0:(360/10):360]){
		rotate([0,0,r])
			linear_extrude(height=95,twist=360)
				translate([45,0,0])
					circle(5);
	}
}

module twist(){
	for(r=[0:(360/15):360]){
		rotate([0,0,r])
			translate([0,45,0])
				scale([.4,.2,1]){
					linear_extrude(height=95,twist=720)
						translate([10,0,0])
							circle(5);
					linear_extrude(height=95,twist=-720)
						translate([-10,0,0])
							circle(5);
				}
	}
}








